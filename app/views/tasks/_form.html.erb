  <%= form_with model: task do |f| %>
    <%= f.text_field :title, id: "title", placeholder: "Title..." %>
    <%= f.text_area :details, id: "details", placeholder: "Details...", rows: 5 %>
    <% unless task.new_record? %>
      <div id="completed">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div>
    <% end %>
    <%= f.submit id: "submit" %>
  <% end %>
